<%= file_field_tag 'file' %>
<%= text_field_tag 'file','', :style => 'display: none; ' %>
<%#= label_tag(@var['id'], @var['help_text']) %>
    </td>
</tr>

<tr id=<%= @var['multiple']%>:1>
    <td> 
        <div id=<%= @var['multiple']%>:sample name="" type="text" onchange="twd_grow_add(this);" ></div>
        <div id=<%= @var['multiple']%>:1:sample:bs_container>
<%= radio_button_tag( @var['id'], 'text', true, :name => @var['multiple'] + ':1:sample_bs_group') %>
<%= label_tag(@var['id'], 'Url') %>
<%= radio_button_tag( @var['id'], 'file', false, :name => @var['multiple'] + ':1:sample_bs_group') %>
<%= label_tag(@var['id'], 'File Upoad') %>
<%= file_field_tag 'file' %>
<%= text_field_tag 'file', '', :style => 'display: none; ' %>
